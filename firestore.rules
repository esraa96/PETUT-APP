rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products, which is needed for your app to display them.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow users to read and write to their own favorites subcollection.
    match /users/{userId}/favorites/{productId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat rules - allow participants to read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.participants;
    }

    // Messages rules - allow participants to read/write
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Support tickets rules - allow users to create and read their own tickets
    match /support_tickets/{ticketId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Orders rules - allow users to read/write their own orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Posts rules - allow authenticated users to read/write
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }

    // Clinics rules - allow read access to all, write for authenticated users
    match /clinics/{clinicId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reservations rules - allow authenticated users
    match /reservations/{reservationId} {
      allow read, write: if request.auth != null;
    }
  }
}